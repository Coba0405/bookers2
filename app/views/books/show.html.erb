<div class="container">
  <div class="row">
      <div class="col-md-3">
    <%= render 'list', user: @user %>
      </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th><strong>Title</strong></th>
              <th><strong>Opinion</strong></th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= link_to image_tag @user.get_profile_image(100,100) %><br>
                <%= link_to user_path(@user.id) do %>
                  <%= @user.name %>
                  <% end %>
              </td>
                <td><p><%= link_to @book.title, book_path(@book.id) %></p></td>
                <td><p><%= @book.body %></p></td>
                  <% if @user == current_user %>
                    <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
                    <td><%= link_to "Destroy", book_path, method: :delete,"data-confirm" => "本当に削除しますか？" %></td>
                  <% else %>
                  <% end %>
              </tr>
          </tbody>
        </table>
    </div>
  </div>
</div>