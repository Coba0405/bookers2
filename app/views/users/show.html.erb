<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', user: @user %>
    </div>

    <div class="col-md-8 offset-md-1">
     <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th><strong>Title</strong></th>
              <th><strong>Opinion</strong></th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <!--book.userでその本を投稿したユーザー-->
            <tr>
              <td><%= link_to image_tag book.user.get_profile_image(100,100) %><br>
                <%= link_to user_path(book.user.id) do %>
                  <%= book.user.name %>
                  <% end %>
              </td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
                  <% if book.user == current_user %>
                    <td><%= link_to "Edit", edit_book_path(book.id) %></td>
                    <td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
                  <% else %>
                  <% end %>
              </tr>
              <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>